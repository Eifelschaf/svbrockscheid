<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="game"
            type="de.kleinelamas.svbrockscheid.model.LeagueGame" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/datum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/ergebnis"
            android:layout_toStartOf="@+id/ergebnis"
            android:gravity="start"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintStart_toStartOf="@+id/paar1"
            app:layout_constraintTop_toTopOf="@+id/ort"
            tools:text="22.11.1985" />

        <TextView
            android:id="@+id/ort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/ergebnis"
            android:layout_toRightOf="@+id/ergebnis"
            android:gravity="end"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary"
            app:layout_constraintEnd_toEndOf="@+id/paar2"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Brockscheid"
            app:layout_constraintStart_toEndOf="@+id/datum"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/paar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/datum"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/ergebnis"
            android:layout_toStartOf="@+id/ergebnis"
            android:gravity="start"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_constraintBottom_toBottomOf="@+id/ergebnis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ergebnis"
            tools:text="SVB" />

        <TextView
            android:id="@+id/ergebnis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/paar1"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textIsSelectable="true"
            android:textSize="25sp"
            app:layout_constraintEnd_toStartOf="@+id/paar2"
            app:layout_constraintStart_toEndOf="@+id/paar1"
            tools:text="3:0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ort" />

        <TextView
            android:id="@+id/paar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/paar1"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/ergebnis"
            android:layout_toRightOf="@+id/ergebnis"
            android:gravity="end"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_constraintBottom_toBottomOf="@+id/ergebnis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ergebnis"
            tools:text="SVA" />
    </android.support.constraint.ConstraintLayout>

</layout>
